<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Demoblaze E2E Critical Path Suite" parallel="tests" thread-count="2">
    <listeners>
        <listener class-name="listeners.TestListener"/>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="E2E Critical Path - Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="tests.LoginTests">
                <methods>
                    <include name="loginWithValidData"/>
                </methods>
            </class>
            <class name="tests.SearchTests">
                <methods>
                    <include name="testSearchByCategory"/>
                </methods>
            </class>
            <class name="tests.CartTests">
                <methods>
                    <include name="testAddProductToCart"/>
                </methods>
            </class>
            <class name="tests.CheckoutTests">
                <methods>
                    <include name="testForRegisteredCheckout"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="E2E Critical Path - Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.LoginTests">
                <methods>
                    <include name="loginWithValidData"/>
                </methods>
            </class>
            <class name="tests.SearchTests">
                <methods>
                    <include name="testSearchByCategory"/>
                </methods>
            </class>
            <class name="tests.CartTests">
                <methods>
                    <include name="testAddProductToCart"/>
                </methods>
            </class>
            <class name="tests.CheckoutTests">
                <methods>
                    <include name="testForRegisteredCheckout"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>