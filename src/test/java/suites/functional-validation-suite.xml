<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Functional Validation Suite" parallel="tests" thread-count="2">
    <listeners>
        <listener class-name="listeners.TestListener"/>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="Validation Tests - Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="tests.LoginTests">
                <methods>
                    <include name="loginWithInvalidData"/>
                    <include name="loginWithEmptyFields"/>
                </methods>
            </class>
            <class name="tests.RegistrationTest">
                <methods>
                    <include name="signUpWithExistingCredentials"/>
                </methods>
            </class>
            <class name="tests.SearchTests">
                <methods>
                    <include name="testSearchWithNoResults"/>
                </methods>
            </class>
            <class name="tests.CheckoutTests">
                <methods>
                    <include name="testWithMissingShippingAddress"/>
                    <include name="testWithMissingPaymentMethod"/>
                </methods>
            </class>
            <class name="tests.ContactFormTests">
                <methods>
                    <include name="testWithMissingData"/>
                    <include name="testWithInvalidMail"/>
                    <include name="testWithEmptyData"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Validation Tests - Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.LoginTests">
                <methods>
                    <include name="loginWithInvalidData"/>
                    <include name="loginWithEmptyFields"/>
                </methods>
            </class>
            <class name="tests.RegistrationTest">
                <methods>
                    <include name="signUpWithExistingCredentials"/>
                </methods>
            </class>
            <class name="tests.SearchTests">
                <methods>
                    <include name="testSearchWithNoResults"/>
                </methods>
            </class>
            <class name="tests.CheckoutTests">
                <methods>
                    <include name="testWithMissingShippingAddress"/>
                    <include name="testWithMissingPaymentMethod"/>
                </methods>
            </class>
            <class name="tests.ContactFormTests">
                <methods>
                    <include name="testWithMissingData"/>
                    <include name="testWithInvalidMail"/>
                    <include name="testWithEmptyData"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>